{
    "name": "dir-analysis-tool",
    "version": "1.0.2",
    "description": "A cross-platform command-line tool that analyzes directories and outputs size, file counts, and file type classifications",
    "main": "bin/index.js",
    "bin": {
        "dir-analysis-tool": "bin/index.js"
    },
    "files": [
        "bin/**/*",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsc",
        "dev": "tsx src/cli.ts",
        "start": "node bin/index.js",
        "prepublishOnly": "pnpm build"
    },
    "keywords": [
        "cli",
        "directory",
        "analyzer",
        "file-system",
        "typescript"
    ],
    "author": "Khaled Saeed",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/khaled-saeed/dir-analysis-tool.git"
    },
    "bugs": {
        "url": "https://github.com/khaled-saeed/dir-analysis-tool/issues"
    },
    "homepage": "https://github.com/khaled-saeed/dir-analysis-tool#readme",
    "dependencies": {
        "chalk": "^4.1.2",
        "chokidar": "^4.0.3",
        "commander": "^11.1.0",
        "inquirer": "^12.6.3",
        "pretty-bytes": "^5.6.0"
    },
    "devDependencies": {
        "@types/inquirer": "^9.0.8",
        "@types/node": "^20.10.0",
        "tsx": "^4.6.0",
        "typescript": "^5.3.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}